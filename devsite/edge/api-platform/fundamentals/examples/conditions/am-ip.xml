  &lt;AssignTo createNew="false" transport="http" type="request"&gt;request&lt;/AssignTo&gt;
  &lt;Set&gt;
    &lt;Headers&gt;
      &lt;Header name="My-Client-IP"&gt;{client.ip}&lt;/Header&gt;
    &lt;/Headers&gt;
  &lt;/Set&gt;
&lt;/AssignMessage&gt;
