&lt;!-- routerule-condition.xml --&gt;
&lt;RouteRule name="default"&gt;
&lt;!-- This routing executes if the header indicates that this is an XML call.
    If "true", the call is routed to the endpoint XMLTargetEndpoint --&gt;
  &lt;Condition&gt;request.header.content-type = "text/xml"&lt;/Condition&gt;
  &lt;TargetEndpoint&gt;XmlTargetEndpoint&lt;/TargetEndpoint&gt;
&lt;/RouteRule&gt;
